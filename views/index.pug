extends layout.pug

block content

  body
    h1 Books
    form(method='post')
      input#search(name='search' type='text' placeholder='search by title, author, genre or year...')
      input(type='submit' value=`Search` style='margin-left:7px')
    p
      a.button(href='/books/new') Create New Book
    table
      thead
        tr
          th Title
          th Author
          th Genre
          th Year
      tbody
        each book in books
          tr
            td
              a(href=`/books/${book.id}`) #{book.title}
            td #{book.author}
            td #{book.genre}
            td #{book.year}