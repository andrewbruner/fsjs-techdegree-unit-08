extends layout.pug

block content

  body
    if title === 'Books'
      h1 Books
    if title === 'Search Results'
      h1 Search Results for "#{searchTerm}"
      p
        a.button(href='/books') Home
    form(method='post')
      input#search(name='search' type='text' placeholder='search by title, author, genre or year...' style='margin:0')
      input(type='submit' value=`Search` style='margin-left:7px')
    p
      a.button(href='/books/new') Create New Book
    table
      thead
        tr
          th Title
          th Author
          th Genre
          th Year
      tbody
        each book in books
          tr
            td
              a(href=`/books/${book.id}`) #{book.title}
            td #{book.author}
            td #{book.genre}
            td #{book.year}